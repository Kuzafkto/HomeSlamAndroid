<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_partidos"
    app:startDestination="@id/partidosFragment">

    <fragment
        android:id="@+id/partidosFragment"
        android:name="com.example.tfgproject.ui.matches.PartidosFragment"
        android:label="Partidos"
        tools:layout="@layout/fragment_partidos">
        <action
            android:id="@+id/action_partidosFragment_to_matchDetailFragment"
            app:destination="@id/matchDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/matchDetailFragment"
        android:name="com.example.tfgproject.ui.matchDetail.MatchDetailFragment"
        android:label="Detalle del Partido"
        tools:layout="@layout/fragment_match_detail">
        <argument
            android:name="game"
            app:argType="com.example.tfgproject.model.Game" />
    </fragment>
</navigation>
